<project name="commons" default="dist" basedir="."
         xmlns:buildflex="http://www.buildflex.com/ant/buildflex">

  <description>commons build file</description>

  <!--
    Imports
    -->

  <import file="../../../build/workspace-defs.xml"/>
  <import file="${workspace.build}/targets-external.xml"/>

  <!--
    Initialize the build system.

    This target is called by the buildflex initialization logic and should
    contain the module specific configuration elements.
    -->

  <target name="module-init">
    <!-- ========= -->
    <!-- Metadata  -->
    <!-- ========= -->
    <property name="module.name" value="commons"/>
    <property name="module.version" value="DEV"/>
    <!-- ========= -->
    <!-- Libraries -->
    <!-- ========= -->
    <path id="library.classpath">
    </path>
    <!-- ========= -->
    <!-- Modules   -->
    <!-- ========= -->
    <path id="dependentmodule.classpath">
    </path>
    <!-- ========= -->
    <!-- Tasks     -->
    <!-- ========= -->
    <path id="module.test.classpath">
    </path>
    <path id="module.test.datapath">
      <pathelement path="${module.source}/test"/>
    </path>
  </target>
</project>
